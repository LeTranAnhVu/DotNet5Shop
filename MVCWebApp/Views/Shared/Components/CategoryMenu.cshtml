@{
    var menu = new List<string>
    {
        "Bakery", "Fruit and Vegetables", "Meat and Fish", "Drinks", "Kitchen", "Somthing else"
    };

}
<div class="side-widget">
    <h5 class="title">Category Menu</h5>
    <ul class="menu-links mb-4">
        @foreach (var item in menu.Take(5))
        {
            <li class="mb-2">
                <a href="#">@item</a>
            </li>
        }
    </ul>
    <a asp-controller="Category" asp-action="Index" class="btn btn-light">More Categories <i class="ml-2 fas fa-chevron-right"></i></a>
</div>